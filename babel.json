{
    "extends": [
        "./es6.json"
    ],
    "parser": "babel-eslint",
    "plugins": [
        "babel"
    ],
    "rules": {
        "arrow-parens": 0,
        "babel/arrow-parens": 2,
        "generator-star-spacing": 0,
        "babel/generator-star-spacing": 1,
        "new-cap": 0,
        "babel/new-cap": [2, {
            "capIsNewExceptions": [
                "$.Deferred"
            ]
        }],
        "babel/no-await-in-loop": 1,
        "object-curly-spacing": 0,
        "babel/object-curly-spacing": [2, "always"],
        "object-shorthand": 0,
        "babel/object-shorthand": [1, "methods"]
    }
}
